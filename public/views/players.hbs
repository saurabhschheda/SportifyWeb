<!DOCTYPE html>
<html>
  <head>
    
    <link rel="stylesheet" href="../../../styles/mobilecard.css" />
    <link rel="stylesheet" href="../../../styles/button_more.css" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Players</title>
  </head>

  <body>

    <script>
      var data = []
    </script> 
    
    <div class="view">
      <div class="card__full">
        <div class="card__full-top">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M16.59 8.59l-4.59 4.58-4.59-4.58-1.41 1.41 6 6 6-6z"/>
              <path d="M0 0h24v24h-24z" fill="none"/>
          </svg>
          <span class="card__full-num"></span>
        </div>
        <div class="card__full-bottom">
          <p class="card__full-handle"></p>
          <p class="card__full-info"></p>
        </div>
      </div>
      <ul class="card__list">
        {{#each this}}
          <li class="card__item card__item--blue">
            <div class="card__info">
              <div class="info-player">
                <p class="info-player__num">{{jersey}}</p>
                <p class="info-player__name">
                  <small>{{firstName}}</small><br>
                  {{lastName}}
                </p>
              </div>
              <div class="info-place">{{age}} yrs</div>
            </div>
            <script>
              data.push({
                num: {{jersey}},
                handle: "{{firstName}} {{lastName}}",
                info: "{{position}}"
              });
            </script>
          </li>
        {{/each}}
        
        
      </ul>
    </div>
    
    <!--Import jQuery before materialize.js-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>     
    
    <script src="../../../javascript/mobilecard.js"></script>
  </body>
</html>